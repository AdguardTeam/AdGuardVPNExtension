.subdomain-modal {

    &__input {
        display: block;
        width: 100%;
        height: 45px;
        padding: 0 10px;
        border-radius: 7px;
        background-color: var(--grayF7);
        border: 1px solid var(--grayD8);
        font-size: 15px;
        margin-top: 5px;

        &:focus {
            outline: none;
        }
    }

    &__actions {
        position: absolute;
        bottom: 30px;

        & button {
            margin-right: 20px;
            text-transform: none;
        }
    }

    & label {
        position: relative;
        display: block;
    }

    &__hostname {
        position: absolute;
        top: 37px;
        right: 20px;
        padding-left: 20px;
        border-left: 1px solid var(--grayD8);
    }
}
