.manual-mode {
    text-align: left;
    height: 315px;

    &__actions {
        position: absolute;
        bottom: 30px;

        & button {
            margin-right: 20px;
            text-transform: none;
        }
    }

    &__confirm-modal {
        height: 225px;
        min-height: initial !important;

        &__actions {
            margin-top: 50px;

            & .button:first-child {
                margin-right: 20px;
            }
        }

    }
}
