.manual-mode {
    text-align: left;
    height: 315px;

    &__actions {
        position: absolute;
        right: 32px;
        left: 32px;
        bottom: 30px;
        display: flex;
        gap: 16px;

        @media (--mobile) {
            flex-direction: column-reverse;

            .button {
                width: 100%;
            }
        }
    }
}
