.modal {
    &__title {
        letter-spacing: 0;
        margin: 10px 0 10px;
        font-size: 32px;
        font-weight: 600;
        line-height: 40px;
    }

    &__mode-selectors {
        margin: 14px 0 24px;
    }

    &__mode {
        height: 320px;
    }
}

.mode-select-button {
    color: var(--gray-base);
    border: none;
    background: none;
    padding: 10px 20px;
    border-radius: 3px;
    font-size: 16px;
    cursor: pointer;

    &.enabled {
        color: var(--grayF3);
        background-color: var(--gray-base);
    }
}
