@keyframes spin {
    0% {transform: rotate(0)}
    100% {transform: rotate(360deg)}
}

.loader {
    display: none;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: var(--white-fog);
    justify-content: center;
    align-items: center;

    &__visible {
        display: flex;
    }

    &__spinner {
        animation: spin 2s linear infinite;
        width: 30px;
    }

    &__container {
        position: relative;
    }
}
