.search {
    position: relative;

    &__input {
        display: block;
        width: 100%;
        height: 52px;
        padding: 0 20px;
        border-radius: 7px;
        color: var(--gray-base);
        background-color: var(--grayF7);
        border: none;
        font-size: 15px;

        &:focus {
            outline: none;
            box-shadow: inset 0 0 0 1px var(--grayD8);
        }

        @media (prefers-color-scheme: dark) {
            background-color: #131313;
        }
    }

    &__clear {
        position: absolute;
        right: 10px;
        top: calc(50% - 13px);
    }

    &__cross {
        width: 24px;
        height: 24px;
        color: var(--gray88);

        &:hover {
            filter: brightness(.7);
        }
    }

    &__nothing-found {
        text-align: center;
        margin-top: 90px;
        color: var(--gray88);
    }
}

.light-mode {
    .search {
        &__input {
            background-color: var(--grayF7);
        }
    }
}

.dark-mode {
    .search {
        &__input {
            background-color: #131313;
        }
    }
}
