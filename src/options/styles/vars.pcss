:root {
    --font-stack: "Roboto", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Ubuntu, Arial, sans-serif;
    --container-width: 960px;
    --content-width: 732px;
    --sidebar-width: 250px;
    --border-color: #d8d8d8;
    --shadow: rgba(0, 0, 0, 0.1);
    --overlay: rgba(0, 0, 0, 0.5);
    --brand-primary: #79b07e;
    --brand-secondary: #4a8b5a;
    --brand-danger: #f56f23;
    --gray-base: #4d4d4d;
    --green300: rgba(116, 163, 82, 0.05);
    --green700: #74a352;
    --green900: #568040;
    --gray88: #888888;
    --grayF3: #f3f3f3;
    --grayF7: #f7f7f7;
    --grayD8: #d8d8d8;
    --gray97: #979797;
    --graya4: #a4a4a4;
    --red: #df3812;
    --redDark: #bf4829;
    --pink: #ff7b7b;
    --t3: 0.3s ease;
    --white: #ffffff;
    --white-strong: #fff;
    --white-fog: rgba(255, 255, 255, 0.7);

    @media (prefers-color-scheme: dark) {
        --white: #131313;
        --white-strong: #000;
        --gray-base: #d8d8d8;
        --grayF3: #131313;
        --border-color: #4d4d4d;
        --brand-primary: #74A352;
        --green700: #568040;
        --green900: #3e5c2e;
        --grayD8: #4d4d4d;
        --overlay: rgba(51, 51, 51, 0.5);
        --white-fog: rgba(0, 0, 0, 0.7);
    }
}

.dark-mode {
    --white: #131313;
    --white-strong: #000;
    --gray-base: #d8d8d8;
    --grayF3: #131313;
    --footer-background: #000;
    --border-color: #4d4d4d;
    --brand-primary: #74A352;
    --green700: #568040;
    --green900: #3e5c2e;
    --grayD8: #4d4d4d;
    --overlay: rgba(51, 51, 51, 0.5);
    --white-fog: rgba(0, 0, 0, 0.7);
}

.light-mode {
    --white: #ffffff;
    --white-strong: #fff;
    --gray-base: #4d4d4d;
    --grayF3: #f3f3f3;
    --border-color: #d8d8d8;
    --brand-primary: #79b07e;
    --grayD8: #d8d8d8;
    --overlay: rgba(0, 0, 0, 0.5);
    --white-fog: rgba(255, 255, 255, 0.7);
    --green700: #74A352;
    --green900: #568040;
}
