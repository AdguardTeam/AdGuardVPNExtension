.authorization {
    width: 112%;
    margin: -16px 0 0 -6%;

    &__title {
        font-size: 2.4rem;
        font-weight: 500;
        margin-bottom: 6px;
        text-align: center;
    }

    &__info {
        min-height: 44px;
        margin-bottom: 37px;
        text-align: center;
        line-height: 2rem;
    }

    &__container {
        position: relative;
    }

    &__button {
        width: 100%;
        text-transform: none;
        margin-bottom: 15px;
        color: var(--gray-base);
        font-size: 1.54rem;
        padding: 16px 20px;

        &:hover {
            border-color: var(--gray-base);
            background-color: transparent;
        }

        &__social-icon {
            width: 16px;
            height: 16px;
            position: absolute;
            left: 17px;
        }
    }
}
