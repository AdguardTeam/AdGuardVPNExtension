.auth {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
    padding-top: 40px;

    &__container {
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100%;
        padding: 0 16px 40px;
        user-select: none;
        font-size: 14px;
    }

    &__presentation {
        font-weight: 700;
        font-size: 2.6rem;
        line-height: 36px;
        text-align: center;
    }

    &__privacy {
        color: var(--gray88);
        font-size: 1.4rem;
        text-align: center;
    }

    &__privacy-link {
        font-family: var(--font-stack);
        font-size: 1.4rem;
        color: var(--green76);
        background: none;
        border: none;
        padding: 0;
        text-decoration: none;
        cursor: pointer;

        &:hover,
        &:focus {
            text-decoration: underline;
        }
    }

    &__title {
        font-size: 1.8rem;
        font-weight: 700;
        text-transform: uppercase;
        line-height: 1;
    }

    &__subtitle {
        margin-top: 30px;
    }

    &__credentials {
        display: block;
        font-weight: 500;
    }

    &__logo {
        margin: 106px auto 40px;
        width: 206px;
        height: 40px;
    }

    &__screenshot {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
    }
}
