.global-error {
    position: relative;
    padding: 10px 20px;
    height: calc(100% - var(--header-height));
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    font-size: 16px;
    line-height: 1.4;
    color: var(--gray-base);

    &--upgrade {
        &:after {
            display: none;
        }

        .global-error__description {
            margin-bottom: 20px;
        }
    }

    &--reduced {
        padding: 16px 30px 0;
    }

    &__content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;

        &--centered {
            margin-top: 61px;
        }
    }

    &__icon {
        width: 100%;
        height: 215px;
        margin: -20px auto 8px;
        background-image: url(../../../../src/assets/images/confused.svg);
        background-position: center bottom;
        background-repeat: no-repeat;

        &--error {
            margin: 0 auto 8px;
            background-image: url(../../../../src/assets/images/not-found.svg);
        }

        &--reduced {
            margin: 0 auto 8px;
            height: 224px;
            background-image: url(../../../assets/images/tired.svg);
        }

        &--trouble {
            margin-top: 20px;
        }
    }

    &__title {
        margin-bottom: 10px;
        font-size: 2.6rem;
        font-weight: 700;
        line-height: 24px;

        &--regular {
            margin-bottom: 16px;
            font-size: 2.8rem;
            font-weight: 400;
            line-height: 3rem;
        }
    }

    &__actions {
        display: flex;
        flex-direction: column;
    }

    &__description {
        max-width: 240px;
        margin-bottom: 40px;

        &--reduced {
            max-width: none;
            margin-bottom: 32px;
            font-size: 1.6rem;
            line-height: 2.2rem;
        }

        &--desktop-enabled {
            max-width: none;
        }
    }

    &__button {
        &:first-child {
            margin-bottom: 20px;
        }

        &--reduced {
            min-width: 220px;

            &:first-child {
                margin-bottom: 32px;
            }
        }
    }

    &__cancel {
        margin-right: -14px;
        align-self: flex-end;
        cursor: pointer;
    }

    &__info {
        text-align: center;
        font-size: 1.6rem;
    }

    &__early {
        text-align: center;
        font-size: 1.6rem;
        color: var(--orange);
    }
}
