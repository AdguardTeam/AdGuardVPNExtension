.info-message {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    position: absolute;
    bottom: 100%;

    &--feedback {
        padding: 10px 13px 11px;
        background-color: #8a9ca0;
    }

    &__progress {
        position: relative;
        width: 100%;
        height: 4px;
        background-color: var(--grayd8);
    }

    &__progress-in {
        position: absolute;
        min-width: 5px;
        height: 4px;
        background-color: var(--green700);

        &.yellow {
            background-color: #e5c35f;
        }

        &.red {
            background-color: #db3538;
        }
    }

    &__text-wr {
        display: flex;
        width: 100%;
        align-items: center;
        padding: 15px 20px;
    }

    &__text {
        color: #fff;
        font-size: 1.4rem;
        font-weight: 500;
        line-height: 16px;
        margin-right: 10px;
    }

    &__value {
        color: var(--green700);

        &.yellow {
            color: #e5c35f;
        }

        &.red {
            color: #db3538;
        }
    }

    &__btn {
        flex: 1;
        min-width: 130px;
        padding: 8px 12px;
        font-weight: 500;
        letter-spacing: 0.06rem;
        border-radius: 5px;
        font-size: 1.4rem;
        white-space: nowrap;

        &--feedback {
            min-width: 170px;
            padding: 8px 10px;
        }
    }
}
