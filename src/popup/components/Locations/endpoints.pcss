.endpoints {
    position: absolute;
    left: 0;
    top: 0;
    z-index: var(--endpoints-z-index);
    width: var(--popup-width);
    height: 100%;
    padding-top: 20px;
    transition: opacity var(--t3);
    background-color: #fff;

    &__header {
        position: relative;
        margin: 0 15px 15px;
        text-align: center;
        line-height: 1.8;
    }

    &__back {
        position: absolute;
        top: 1px;
        left: 0;
        width: 24px;
        height: 24px;
        padding: 0;
        border: 0;
    }

    &__search {
        position: relative;
        margin: 0 15px 25px;
    }

    &__search-in {
        width: 100%;
        padding: 10px 45px 10px 15px;
        font-size: 1.6rem;
        border: 0;
        border-radius: 4px;
        outline: none;
        background-color: var(--grayf3);
    }

    &__cross {
        position: absolute;
        width: 24px;
        height: 24px;
        top: calc(50% - 12px);
        right: 15px;
        padding: 0;
        border: 0;
        visibility: hidden;
        opacity: 0;

        &--active {
            visibility: visible;
            opacity: 0.5;
        }
    }

    &__item {
        display: flex;
        align-items: center;
        width: 100%;
        padding: 14px 17px;
        font-size: 1.6rem;
        color: var(--gray-base);
        background-color: transparent;
        border: 0;
        outline: none;
        cursor: pointer;

        &:first-child {
            margin-top: 0;
        }

        &--selected {
            & .endpoints__ping,
            & .endpoints__country {
                font-weight: 700;
            }
        }

        &--offline {
            opacity: 0.5;
            pointer-events: none;
        }

        &:hover {
            background-color: var(--grayf3);
        }
    }

    &__icon {
        display: flex;
        align-items: center;
        margin-right: 15px;
    }

    &__city,
    &__country {
        max-width: 170px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        text-align: left;
    }

    &__city {
        color: var(--gray88);
        font-size: 1.4rem;
    }

    &__ping {
        margin-left: auto;
        font-weight: 400;

        &--success {
            color: var(--green-light);
        }

        &--warning {
            color: var(--orange);
        }
    }

    &__scroll {
        max-height: 465px;
        overflow-y: auto;
        scrollbar-color: var(--gray88) white;
        scrollbar-width: thin;

        &::-webkit-scrollbar {
            width: 4px;
        }

        &::-webkit-scrollbar-thumb {
            border-radius: 0px;
            background-color: var(--gray88);
        }
    }

    &__list {
        margin-bottom: 23px;

        &:last-child {
            margin-bottom: 0;
        }
    }

    &__title {
        margin: 0 15px 10px;
        font-size: 2rem;
        font-weight: 700;

        &--big {
            font-size: 2.6rem;
            font-weight: 700;
            text-align: center;
            line-height: 1;
        }
    }

    &__dot {
        display: inline-block;
        margin-right: 1px;
        animation: wave 1.3s linear infinite;

        &:nth-child(2) {
            animation-delay: -1.1s;
        }

        &:nth-child(3) {
            margin: 0;
            animation-delay: -0.9s;
        }
    }

    &__not-found {
        margin: 10px 0 35px;
        height: 224px;
        background-image: url(../../../../src/assets/images/not-found.svg);
        background-repeat: no-repeat;
        background-position: center bottom;
        background-size: contain;
    }
}

@keyframes wave {
    0%, 60%, 100% {
        transform: initial;
    }

    30% {
        transform: translateY(-4px);
    }
}
