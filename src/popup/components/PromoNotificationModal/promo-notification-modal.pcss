@keyframes notify-show {
    0% {
        transform: translateY(200px);
    }

    100% {
        transform: translateY(0);
    }
}

@keyframes notify-show-reverse {
    0% {
        transform: translateY(0);
    }

    100% {
        transform: translateY(200px);
    }
}

.notify {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;

    &__wrap {
        outline: none;
        animation: notify-show 0.3s ease-in
    }

    &__promo {
        width: 100%;
        height: 194px;
        background-color: #E6F6FF;
        background-size: cover;
        background-repeat: no-repeat;
        background-image: url('../../../assets/images/birthday-14-promo.svg');
        box-shadow: 4px 4px 12px 0 #00000026;
        padding: 0 20px;
        display: flex;
    }

    &__close {
        position: absolute;
        top: 8px;
        right: 8px;
        cursor: pointer;
    }

    &__content {
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-left: auto;
    }

    &__title {
        text-align: center;
        font-family: var(--font-stack-second);
        white-space: pre-wrap;
        font-weight: 700;
        line-height: 29px;
        font-size: 24px;
        color: #ffffff;
        letter-spacing: 0;
        max-width: 210px;
    }

    &__btn {
        cursor: pointer;
        color: #4d4d4d;
        font-weight: 400;
        font-size: 16px;
        line-height: 24px;
        background-color: #ffffff;
        padding: 12px 24px;
        min-width: 168px;
        border: none;
        border-radius: 8px;
        margin-top: 24px;
        letter-spacing: 0;
        text-align: center;
    }
}
