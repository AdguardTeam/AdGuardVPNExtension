.rate-popup {
    padding-top: 25px;
    border-top: 1px solid var(--border-color);

    &__text {
        margin-bottom: 20px;
        line-height: 22px;
    }

    &--extra-option {
        padding: 16px 24px;

        &:hover {
            background-color: var(--grayf3);
            border-radius: 0 0 8px 8px;
        }

        & .rate-popup__text {
            font-weight: 600;
            margin-bottom: 10px;
        }

        & .rate-popup__stars {
            margin-bottom: 0;
            justify-content: flex-end;
        }
    }

    &__stars {
        display: flex;
        flex-direction: row-reverse;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    &__star {
        flex-shrink: 0;
        display: block;
        width: 30px;
        height: 25px;
        padding-right: 5px;
        font-size: 0;
        background-size: 25px 25px;
        background-position: left;
        background-repeat: no-repeat;
        background-image: url("../../../assets/images/star.svg");
        cursor: pointer;

        @media (--min-small) {
            width: 50px;
            height: 40px;
            background-size: 40px 40px;
        }

        &:hover,
        &:hover ~ .rate-popup__star,
        &:hover ~ .rating__input:checked ~ .rating__star {
            background-image: url("../../../assets/images/star-active.svg");
        }

        &:first-of-type {
            width: 25px;
            padding-right: 0;
        }
    }

    &__input {
        display: none;

        &:checked ~ .rate-popup__star {
            background-image: url("../../../assets/images/star-active.svg");
        }
    }

    &__hide {
        padding: 0;
        font-size: 1.2rem;
        color: var(--gray88);
        background-color: transparent;
        border: 0;
        cursor: pointer;
        opacity: 0.5;

        &:hover,
        &:focus {
            text-decoration: underline;
            outline: 0;
        }
    }
}
