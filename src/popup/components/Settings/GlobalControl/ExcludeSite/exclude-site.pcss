.exclude-site-wrapper {
    position: relative;

    .button--highlighted-hint {
        position: relative;
        z-index: var(--exclude-site-hint-overlay-z-index);

        &:after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border-radius: 8px;
            box-shadow: 0px 0px 0px 9999px var(--exclude-site-hint-overlay);
        }
    }
}
