.server-error {
    text-align: center;

    &__image {
        width: 100%;
        height: 195px;
        margin: 0px auto 30px;
        background-image: url(../../../../../src/assets/images/error.svg);
        background-position: center;
        background-repeat: no-repeat;
    }

    &__title {
        max-width: 200px;
        margin: 0 auto 35px;
        font-size: 2.6rem;
        font-weight: 700;
        line-height: 24px;
    }
}
