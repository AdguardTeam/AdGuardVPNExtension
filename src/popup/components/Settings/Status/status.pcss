.status {
    margin-bottom: 35px;

    &__title {
        margin-bottom: 5px;
        font-size: 2.6rem;
        font-weight: 700;
        line-height: 1;
    }

    &__subtitle {
        font-size: 1.6rem;
        line-height: 1.1;

        &--success {
            color: var(--green-light);
        }

        &--disabled {
            color: var(--gray88);
        }

        &--warning {
            color: var(--orange);
        }
    }
}
