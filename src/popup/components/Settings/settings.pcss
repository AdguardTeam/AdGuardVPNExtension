.settings {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 30px 20px 30px;

    &:after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 8px;
        background-color: var(--grayd8);
    }

    &--active {
        &:after {
            background-color: none;
            background-image: var(--brand-gradient);
        }
    }

    &--premium-promo,
    &--feedback {
        padding-bottom: 15px;

        &:after {
            display: none;
        }
    }

    &__main {
        text-align: center;
    }

    &__extra {
        padding: 25px;

        &--disabled {
            opacity: 0.5;
            pointer-events: none;
        }
    }

    &__item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;

        &:last-child {
            margin-bottom: 0;
        }
    }
}
