.vpn-blocked-details {
    height: 580px;
    top: 10px;
    padding-top: 28px;
    text-align: center;
    font-family: var(--font-stack);

    &__image {
        width: 100%;
        margin-bottom: 16px;
        background-position: center;
        background-repeat: no-repeat;
        background-size: contain;
        height: 170px;
        background-image: url("../../../assets/images/vpn-blocked-error-ninja.svg");
    }

    &__title {
        font-weight: 700;
        line-height: 24px;
    }

    &__description {
        font-size: 16px;
        line-height: 21px;
        font-weight: 400;
        padding: 0 16px;
        margin-bottom: 28px;
    }

    &__button {
        height: 56px;
        margin-bottom: 16px;
        padding: 12px 20px;
    }
}
