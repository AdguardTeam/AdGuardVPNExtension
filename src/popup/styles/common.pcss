*,
*:before,
*:after {
    box-sizing: border-box;
}

html {
    font-size: 10px;
    @media (prefers-color-scheme: dark) {
        color-scheme: dark;
    }
}

body {
    width: var(--popup-width);
    height: var(--popup-height);
    margin: 0;
    font-family: var(--font-stack);
    font-size: 1.6rem;
    line-height: 1.4;
    color: var(--gray-base);
    background-color: var(--white);
}

.content {
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.rsm-marker {
    outline: none;
    cursor: pointer;
}

.footer {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    position: relative;
}

.hidden {
    display: none;
}

button,
input,
textarea {
    font-family: inherit;
}

.logo {
    width: 206px;
    height: 40px;
    background-image: url('../../assets/images/logo-vpn.svg');
    background-repeat: no-repeat;
    background-size: contain;

    @media (prefers-color-scheme: dark) {
        background-image: url('../../assets/images/logo-vpn-dark.svg');
    }
}

.data-loader {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.light-mode {
    .logo {
        background-image: url('../../assets/images/logo-vpn.svg');
    }
}

.dark-mode {
    .logo {
        background-image: url('../../assets/images/logo-vpn-dark.svg');
    }
}
